</action>



<action id="order-single"> 
  <if test="not(get('loggedIn', false()))"> 
    <call action="login"/>
    <variable name="loggedIn">true()</variable>
  </if>-->
  <if test="$book._orderCount > 1">
    <s>vl:choose("internal-order-choose-document", 
