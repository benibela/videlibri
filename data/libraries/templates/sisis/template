     Ausgabeort: Zentralbibliothek    </template>-->
           {$book.statusId := "ordered"} 
        </form>   
        <div class="message-confirm">{$book.statusId := "ordered"}</div>
        </t:switch>   
      </template>
    </page>
  </if>
</action>

