                 "(submit+ed)=false", "$1=true")  (: touchpoint, they actually spelled it "submited" :)
    }
    </variable>  
    <page url="{$confirm}">
      <template>
        <t:switch prioritized="true">
        <form t:condition="contains(@action, 'acknowledge.do') ">
         <!-- ok -->
