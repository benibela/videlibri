<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/lay_options_caption_accountview"
        android:id="@+id/textView" android:layout_gravity="left|center_vertical"
        android:gravity="left" android:padding="@dimen/optionheaderpadding"
        android:background="@color/optionHeaderBackgroundColor" android:textStyle="bold"
        android:layout_marginTop="@dimen/optionheaderpadding"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:id="@+id/viewaccounts">
    </LinearLayout>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:text="@string/lay_options_caption_displayoptions" android:id="@+id/textView8"
        android:padding="@dimen/optionheaderpadding"
        android:background="@color/optionHeaderBackgroundColor" android:textStyle="bold"
        android:layout_marginTop="@dimen/optionheaderpadding"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/optionheaderpadding"
            android:text="@string/lay_options_label_grouping" />
        <Spinner android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:id="@+id/grouping"
            android:entries="@array/sortable_properties_tr"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/optionheaderpadding"
            android:text="@string/lay_options_label_sorting" />
        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sorting"
            android:entries="@array/sortable_properties_tr"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/optionheaderpadding"
            android:text="@string/lay_options_label_view_history" />
        <include layout="@layout/switchbox"
            android:id="@+id/viewHistory"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>