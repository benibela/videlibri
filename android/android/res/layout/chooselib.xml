<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/actionbar"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lay_chooselib_choose"
            android:id="@+id/textView" android:layout_gravity="center_vertical|left" android:padding="5sp"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/libListView" android:layout_gravity="right|center_vertical" android:layout_weight="1"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lay_chooselib_whynot"
            android:id="@+id/textViewLibWhyNot" android:layout_gravity="center_vertical|left" android:padding="5sp"
            android:clickable="true" android:layout_weight="0"/>
</LinearLayout>